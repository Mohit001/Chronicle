<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  app:layout_behavior="@string/appbar_scrolling_view_behavior"
  tools:context="in.raveesh.chronicledemo.MainActivity"
  tools:showIn="@layout/activity_main">

  <TextView
    android:id="@+id/lastOccurred"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginStart="16dp"
    android:text="@string/last_occurred"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>
  <TextView
    android:id="@+id/timesOccurred"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:text="@string/times_occurred"
    app:layout_constraintStart_toStartOf="@+id/lastOccurred"
    app:layout_constraintTop_toBottomOf="@+id/lastOccurred"/>
</android.support.constraint.ConstraintLayout>
